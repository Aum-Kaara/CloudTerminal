
<div ng-init="">
    <div class="table-responsive ng-scope">
        <table class="table table-striped table-condensed pull-down">
            <thead>
                <tr>
                    <th><a ng-click="sortBy('name')" href="javascript:;">Name</a></th>
                    <th><a ng-click="sortBy('browser')" href="javascript:;">Location</a></th>
                    <th><a ng-click="sortBy('browser')" href="javascript:;">Resource Group</a></th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="networkList">
                <tr ng-repeat="item in VMList" class="ng-scope">
                    <td><button class="btn btn-link" data-target="#commonModalDialog" data-toggle="modal" type="button" ng-click="GetVMInfo(item)">{{item.name}}</button></td>
                    <td class="ng-binding">{{item.location}}</td>
                    <td class="ng-binding">{{Split(item.id,'/',4)}}</td>
                    <td class="text-right"><i class="fa icon-azure-icon-virtual-machine fa-2x" title="Responsive device"></i></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div tabindex="-1" class="modal in" id="commonModalDialog" role="dialog" aria-hidden="false" aria-labelledby="myModalLabel" style="display: none;" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog" id="commonModalDialogBox">
            <div class="modal-content" id="commonModalDialogContent" style="top: 90.5px;">
                <div class="modal-header">
                    <button title="Close" class="close" id="btnXViewDatabaseServer" aria-hidden="true" type="button" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Virtual Machines Properties</h4>
                </div>
                <div class="modal-body">

                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a data-toggle="tab" data-target="#General" href="javascript:;" aria-expanded="false">General</a>
                        </li>
                        <li class="">
                            <a data-toggle="tab" data-target="#Endpoints" href="javascript:;" aria-expanded="false">Endpoints</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="General" class="tab-pane fade active in " style="padding-top:20px">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 no-left-padding no-right-padding">
                                    <p class="control-group">
                                        <label class="control-label">Virtual Machines DNS name</label>:
                                        <br>
                                        <input name="" class="form-control" id="" ng-model="VMAC.properties.instanceView.fullyQualifiedDomainName" type="text" readonly="readonly">
                                    </p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-sm-6 no-left-padding">
                                    <p class="control-group">
                                        <label class="control-label">Virtual Machines Name</label>:
                                        <br>
                                        <input name="" class="form-control" id="" type="text" readonly="readonly" ng-model="VMAC.name">
                                    </p>
                                </div>
                                <div class="col-md-6 col-sm-6 no-right-padding">
                                    <p class="control-group">
                                        <label class="control-label">Status</label>:
                                        <br>
                                        <input name="" class="form-control" id="" type="text" readonly="readonly" ng-model="VMAC.properties.instanceView.powerState">
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div id="Endpoints" class="tab-pane fade" style="padding-top:20px">

                            <div class="table-responsive ng-scope">
                                <table class="table table-striped table-condensed pull-down">
                                    <thead>
                                        <tr>
                                            <th><a ng-click="sortBy('name')" href="javascript:;">Name</a></th>
                                            <th><a ng-click="sortBy('browser')" href="javascript:;">Port</a></th>
                                            <th><a ng-click="sortBy('browser')" href="javascript:;">protocol</a></th>
                                            <th>Public Port</th>
                                        </tr>
                                    </thead>
                                    <tbody id="">
                                        <tr ng-repeat="item in VMAC.properties.networkProfile.inputEndpoints" class="ng-scope">
                                            <td>{{item.endpointName}}</td>
                                            <td>{{item.privatePort}}</td>
                                            <td>{{item.protocol}}</td>
                                            <td>{{item.publicPort}}</td>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                   
                    <button class="btn btn-link" type="button" ng-click="VMOperation(VMAC,'start')">
                        <i class="fa fa-play fa-2x"></i>
                    </button>
                    <button class="btn btn-link" ng-disabled="true"  type="button" ng-click="VMOperation(VMAC,'powerOff')">
                        <i class="fa fa-power-off fa-2x"></i>
                    </button>

                    <button class="btn btn-link" type="button" ng-click="VMOperation(VMAC,'restart')">
                        <i class="fa fa-refresh fa-2x"></i>
                    </button>

                    <button class="btn btn-link" type="button" ng-click="VMOperation(VMAC,'Delete')">
                        <i class="fa fa-trash-o fa-2x"></i>
                    </button>
                    <button class="btn btn-link" type="button" data-dismiss="modal">
                        <i class="fa fa-remove fa-2x"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div inform class="inform-fixed"></div>
</div>
